BOOST_ROOT = $(HOME)/boost_1_48_0
CC = g++ -static -O3 -DNDEBUG -std=gnu++0x

all: bin/Linux/x86_64/igrow bin/Linux/x86/igrow

bin/Linux/x86_64/igrow: obj/Linux/x86_64/ligand.o obj/Linux/x86_64/main.o
	$(CC) -o $@ $^ -pthread -lboost_system -lboost_thread -lboost_filesystem -lboost_program_options

obj/Linux/x86_64/%.o: src/%.cpp 
	$(CC) -o $@ $< -c

bin/Linux/x86/igrow: obj/Linux/x86/ligand.o obj/Linux/x86/main.o
	$(CC) -m32 -o $@ $^ -L$(BOOST_ROOT)/lib -pthread -lboost_system -lboost_thread -lboost_filesystem -lboost_program_options

obj/Linux/x86/%.o: src/%.cpp 
	$(CC) -m32 -o $@ $< -c -I$(BOOST_ROOT)

clean:
	rm -f bin/Linux/x86/igrow obj/Linux/x86/*.o bin/Linux/x86_64/igrow obj/Linux/x86_64/*.o
